                        <MenuItem fx:id="SilverBGC" mnemonicParsing="false" onAction="#SilverBGCHandle" text="Silver" />
                        <MenuItem fx:id="TurquoiseBGC" mnemonicParsing="false" onAction="#TurquoiseBGCHandle" text="Turquoise" />
                        <MenuItem fx:id="whiteBGC" mnemonicParsing="false" onAction="#whiteBGCHandle" text="white" />
                     </items>
                  </Menu>
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="aboutApp" mnemonicParsing="false" onAction="#aboutAppHandle" text="about app">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/information.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuItem>
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</FlowPane>
